<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:gravity="bottom">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="90pt"
        android:gravity="center_vertical"
        android:background="#ffffff"
        >
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3c3c50"
            android:textSize="28pt"
            android:text="取消"
            android:background="@null" />


        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/segmentTabLayout"
            android:layout_width="400pt"
            android:layout_height="60pt"
            android:layout_centerInParent="true"
            tl:tl_bar_color="#f5f5f5"
            tl:tl_indicator_anim_enable="true"
            tl:tl_indicator_bounce_enable="false"
            tl:tl_indicator_color="#4572e7"
            tl:tl_indicator_corner_radius="30pt"
            tl:tl_bar_stroke_width="0dp"
            tl:tl_textBold="BOTH"
            tl:tl_textSelectColor="#ffffff"
            tl:tl_textUnselectColor="#3c3c50"
            />
        
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3c3c50"
            android:textSize="28pt"
            android:text="确定"
            android:layout_alignParentEnd="true"
            android:background="@null"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="#e1e1e1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="369pt"
        android:orientation="horizontal"
        >
        <DatePicker
            android:id="@+id/datePicker"
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:spinnersShown="true"
            android:layout_gravity="center"
            android:calendarTextColor="#3c3c50"
            />

        <DatePicker
            android:id="@+id/datePicker2"
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:spinnersShown="true"
            android:layout_gravity="center"
            android:calendarTextColor="#3c3c50"
            />

    </LinearLayout>


</LinearLayout>