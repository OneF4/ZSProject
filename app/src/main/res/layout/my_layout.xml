<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">
    <include layout="@layout/my_title_layout" />
    <View
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:background="#f5f5f5"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="#e1e1e1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_height="90pt">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20pt"
            android:layout_gravity="center"
            android:layout_marginRight="20pt"
            android:src="@mipmap/login_user"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前登录用户"
            android:layout_gravity="center"
            android:textSize="32pt"
            android:textColor="#3c3c50"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="zhengxiaolong"
            android:textSize="28pt"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:textColor="#646e82"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="#e1e1e1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:background="#f5f5f5"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="#e1e1e1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_height="90pt">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20pt"
            android:layout_gravity="center"
            android:layout_marginRight="20pt"
            android:src="@mipmap/change_password"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改密码"
            android:layout_gravity="center"
            android:textSize="32pt"
            android:textColor="#3c3c50"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20pt"
            android:layout_gravity="center"
            android:src="@mipmap/arrows"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="#e1e1e1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_height="90pt">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20pt"
            android:layout_gravity="center"
            android:layout_marginRight="20pt"
            android:src="@mipmap/on_line_updating"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/on_line_updating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2pt"
                android:textSize="32pt"
                android:text="在线更新"
                android:layout_gravity="center"
                android:textColor="#3c3c50" />
            <ImageView
                android:id="@+id/on_line_updating_red"
                android:layout_width="9pt"
                android:layout_height="9pt"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="5pt"
                android:layout_toRightOf="@+id/on_line_updating"
                android:src="@mipmap/red"
                android:visibility="visible" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="android 6.0"
            android:gravity="right"
            android:layout_gravity="center"
            android:textSize="28pt"
            android:textColor="#646e82"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20pt"
            android:layout_gravity="center"
            android:layout_marginLeft="20pt"
            android:src="@mipmap/arrows"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="#e1e1e1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="90pt"
        android:layout_marginTop="60pt"
        android:layout_marginLeft="40pt"
        android:background="@drawable/button_shape"
        android:layout_marginRight="40pt"
        android:text="退出当前账户"
        android:textSize="36pt"
        android:textColor="#ff4848"/>
</LinearLayout>
