<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.work.zsproject.view.activity.BodyActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/body_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="9"

        />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/body_tablelayout"
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="1"
        android:background="#ffffff"
        tl:tl_iconHeight="50pt"
        tl:tl_iconWidth="50pt"
        tl:tl_indicator_color="#2C97DE"
        tl:tl_indicator_height="0pt"
        tl:tl_textSelectColor="#2C97DE"
        tl:tl_textUnselectColor="#66000000"
        tl:tl_textsize="20pt"
        tl:tl_underline_color="#DDDDDD"
        tl:tl_underline_height="1pt"/>


</LinearLayout>
